{%
    set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
]
%}

<div{{ attributes|default(create_attribute()).addClass(classes) }}>
    {{ title_prefix }}
    {% if label %}
        <h2{{ title_attributes|default(create_attribute()) }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% block content %}
        {{ content }}
    {% endblock %}
</div>
