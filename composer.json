{
    "name": "lastcall/drupal-scaffold",
    "description": "Scaffolding for an enterprise scale Drupal build",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Rob Bayliss",
            "email": "rob@lastcallmedia.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url":  "https://packages.drupal.org/8"
        },
        {
            "type": "vcs",
            "url": "https://github.com/rbayliss/drupal-scaffold"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "~1.0",
        "hirak/prestissimo": "^0.3",
        "lastcall/drupal-scaffold-scripts": "dev-master",
        "drupal/core": "^8.4",
        "drupal-composer/drupal-scaffold": "dev-master"
    },
    "require-dev": {
        "drupal/console": "^1.0.1",
        "drupal/coder": "^8.2.12",
        "drupal/drupal-extension": "^3.3",
        "squizlabs/php_codesniffer": "^2.0",
        "mikey179/vfsStream": "^1.2",
        "phpunit/phpunit": ">=4.8.35 <5",
        "drush/drush": "^8.1",
        "lastcall/mannequin-drupal": "~1.0"
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "patches": { },
        "drupal-scaffold": {
            "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8/{version}/{path}",
            "includes": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes",
                "sites/example.settings.local.php": "sites/default/example.settings.local.php",
                "sites/development.services.yml": "sites/default/development.services.yml",
                "sites/default/settings.pantheon.php": "sites/default/settings.pantheon.php"
            },
            "excludes": [
                ".csslintrc",
                ".eslintrc.json",
                ".eslintignore",
                "sites/example.sites.php"
            ],
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml"
            }
        }
    },
    "scripts": {
        "lint": ["@lint:composer", "@lint:phpcs", "@lint:eslint"],
        "lint:composer": "@composer validate",
        "lint:phpcs": "phpcs",
        "lint:eslint": "node_modules/.bin/eslint .",

        "test": ["@test:phpunit", "@test:behat", "@test:wdio"],
        "test:phpunit": "phpunit",
        "test:behat": "behat",
        "test:wdio": "node_modules/.bin/wdio wd/wdio.conf.js",

        "post-package-install": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup",
        "post-package-update": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup",

        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"

    }
}
