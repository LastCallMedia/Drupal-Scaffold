{
  "tokens": {
    "drupal": "https://raw.githubusercontent.com/drupal/drupal/{{drupal/core.version}}",
    "drops": "https://raw.githubusercontent.com/pantheon-systems/drops-8/{{drupal/core.version}}"
  },
  "files": {
    "{{drupal}}/.editorconfig": ".editorconfig",
    "{{drupal}}/.gitattributes": ".gitattributes",
    "{{drupal}}/.htaccess": "{{webroot}}/.htaccess",
    "{{drupal}}/index.php": "{{webroot}}/index.php",
    "{{drupal}}/update.php": "{{webroot}}/update.php",
    "{{drupal}}/robots.txt": "{{webroot}}/robots.txt",
    "{{drupal}}/web.config": "{{webroot}}/web.config",
    "{{drupal}}/sites/default/default.settings.php": "{{webroot}}/sites/default/default.settings.php",
    "{{drupal}}/sites/default/default.services.yml": "{{webroot}}/sites/default/default.services.yml",
    "{{drupal}}/sites/example.settings.local.php": "{{webroot}}/sites/default/example.settings.local.php",
    "{{drupal}}/sites/development.services.yml": "{{webroot}}/sites/default/development.services.yml",
    "{{drops}}/sites/default/settings.pantheon.php": "{{webroot}}/sites/default/settings.pantheon.php"
  }
}
